---
import Header from "../components/Header.astro"
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Devshelf is a digital library of resources for programmers. Explore libraries, tools and utilities to learn faster, code smarter and make development easier." />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>Devshelf | Digital Bookshelf of Resources for Developers</title>
	</head>

	<body class="relative text-black dark:text-white">
		<Header></Header>
		<slot />
	</body>
</html>

<style is:global>
	:root {
    	color-scheme: light dark;
    }
	
	html,
	body {
		margin: 0;
		width: 100%;
		height: 100%;
		-webkit-font-smoothing: antialiased;
  		-moz-osx-font-smoothing: grayscale;
	}

	html {
		scroll-behavior: smooth;
	}
</style>
